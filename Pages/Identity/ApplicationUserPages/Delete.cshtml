@page
@model SandboxRazor.Pages.Identity.ApplicationUserPages.DeleteModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";
}

<h1 class="my-4">ApplicationUser Delete</h1>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Confirm Deletion</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">Are you sure you want to delete this ApplicationUser?</h5>
        <form method="post">
            <input type="hidden" asp-for="ApplicationUser.Id" />
            <button type="submit" class="btn btn-danger btn-lg" title="Delete">
                <i class="fas fa-trash-alt"></i>
            </button>
        </form>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Nama Lengkap
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ApplicationUser.FirstName) - @Html.DisplayFor(model => model.ApplicationUser.LastName)
            </dd>
            <dt class="col-sm-3">
                IsAzureUser
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ApplicationUser.IsAzureUser)
            </dd>
            <dt class="col-sm-3">
                Username
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ApplicationUser.UserName)
            </dd>
            <dt class="col-sm-3">
                Email
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ApplicationUser.Email)
            </dd>
            <dt class="col-sm-3">
                Dibuat oleh
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ApplicationUser.CreatedUser)
            </dd>
            <dt class="col-sm-3">
                Dibuat tanggal
            </dt>
            <dd class="col-sm-9">
                <p>@(Model.ApplicationUser.CreatedDate != null ? Model.ApplicationUser.CreatedDate.Value.ToString("dd-MMM-yyyy hh:mm:ss") : "Date not available")</p>
            </dd>
            <dt class="col-sm-3">
                Diubah oleh
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ApplicationUser.ModifiedUser)
            </dd>
            <dt class="col-sm-3">
                Diubah tanggal
            </dt>
            <dd class="col-sm-9">
                <p>@(Model.ApplicationUser.ModifiedDate != null ? Model.ApplicationUser.ModifiedDate.Value.ToString("dd-MMM-yyyy hh:mm:ss") : "Date not available")</p>
            </dd>
        </dl>

        <form method="post">
            <div class="mt-3">
                <a class="btn btn-secondary" asp-page="./Index">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>
@page
@model SandboxRazor.Pages.Pharmacy.SupplierPages.EditModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}

<h1 class="my-4">Supplier Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Supplier.Code" class="control-label">Kode Supplier</label>
                <input asp-for="Supplier.Code" class="form-control" />
                <span asp-validation-for="Supplier.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Name" class="control-label">Nama Supplier</label>
                <input asp-for="Supplier.Name" class="form-control" />
                <span asp-validation-for="Supplier.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Note" class="control-label">Keterangan</label>
                <input asp-for="Supplier.Note" class="form-control" />
                <span asp-validation-for="Supplier.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.PhoneNumber" class="control-label">No. Telp</label>
                <input asp-for="Supplier.PhoneNumber" class="form-control" />
                <span asp-validation-for="Supplier.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Address" class="control-label">Alamat</label>
                <input asp-for="Supplier.Address" class="form-control" />
                <span asp-validation-for="Supplier.Address" class="text-danger"></span>
            </div>
            <br />
            <input type="hidden" asp-for="Supplier.Id" />
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save
            </button>
            <a class="btn btn-secondary" asp-page="./Index">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@page
@model SandboxRazor.Pages.Pharmacy.MedicationPages.DetailsModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Details";
}

<h1 class="my-4">Medicine Details</h1>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Medication Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Supplier
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.Supplier.Code) -  @Html.DisplayFor(model => model.Medication.Supplier.Name)
            </dd>
            <dt class="col-sm-3">
                Kode Item
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.Code)
            </dd>
            <dt class="col-sm-3">
                Nama Item
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.Name)
            </dd>
            <dt class="col-sm-3">
                Keterangan
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.Note)
            </dd>
            <dt class="col-sm-3">
                Kategori
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.Category)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Medication.Qty)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.Qty)
            </dd>
            <dt class="col-sm-3">
                Harga
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.Price)
            </dd>
            <dt class="col-sm-3">
                Dibuat oleh
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.CreatedUser)
            </dd>
            <dt class="col-sm-3">
                Dibuat tanggal
            </dt>
            <dd class="col-sm-9">
                <p>@(Model.Medication.CreatedDate != null ? Model.Medication.CreatedDate.Value.ToString("dd-MMM-yyyy hh:mm:ss") : "Date not available")</p>
            </dd>
            <dt class="col-sm-3">
                Diubah oleh
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Medication.ModifiedUser)
            </dd>
            <dt class="col-sm-3">
                Diubah tanggal
            </dt>
            <dd class="col-sm-9">
                <p>@(Model.Medication.ModifiedDate != null ? Model.Medication.ModifiedDate.Value.ToString("dd-MMM-yyyy hh:mm:ss") : "Date not available")</p>
            </dd>
        </dl>
    </div>
</div>

<!-- Action buttons with Bootstrap styling -->
<div class="mt-3">
    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@Model.Medication.Id">
        <i class="fas fa-edit"></i> Edit
    </a>
    <a class="btn btn-secondary" asp-page="./Index">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>